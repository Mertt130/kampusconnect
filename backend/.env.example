# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/kampusconnect"

# JWT Configuration
JWT_ACCESS_SECRET=kampusconnect_jwt_access_secret_2024_production_key_32chars
JWT_REFRESH_SECRET=kampusconnect_jwt_refresh_secret_2024_production_key_32chars
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_SECRET=kampusconnect_jwt_main_secret_2024_production_key_32chars
JWT_EXPIRE=7d
JWT_REMEMBER_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Kamp√ºsConnect <noreply@kampusconnect.com>"

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# Initial Super Admin
SUPER_ADMIN_EMAIL=admin@kampusconnect.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!@#

# Admin
ADMIN_EMAIL=admin@kampusconnect.com
ADMIN_PASSWORD=change-this-password

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Sentry (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn

# Google Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X
